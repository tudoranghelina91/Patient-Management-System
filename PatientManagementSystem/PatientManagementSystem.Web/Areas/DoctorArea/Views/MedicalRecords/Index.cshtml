@model IEnumerable<PatientManagementSystem.Web.Models.MedicalRecordEntryViewModel>

@{
    ViewBag.Title = "Medical record for " + TempData["patientFirstName"] + " " + TempData["patientFirstName"];
}

    <h2>Medical record for @TempData["patientFirstName"]  @TempData["patientLastName"];</h2>

<p>
    @Html.ActionLink("Add Record Entry", "Create", new { patientId = TempData["patientId"] })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TimeEntry)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReasonForVisit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExaminationScope)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Diagnosis)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RecommendedVisitDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TimeEntry)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReasonForVisit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ExaminationScope)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Diagnosis)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RecommendedVisitDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id, patientId = TempData["patientId"] }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id, patientId = TempData["patientId"] }) |
            @*@Html.ActionLink("Delete", "Delete", new { id=item.Id, patientId = TempData["patientId"] })*@
        </td>
    </tr>
}

</table>

@Html.ActionLink($"Back to {TempData["patientFirstName"]} {TempData["patientLastName"]} patient details", "Details", "Patients", new { id = TempData["patientId"]} ,null)
